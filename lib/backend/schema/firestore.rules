rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /establishments/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /events/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /Feedback/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /establishments/{parent}/schedule/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/schedule/{document} {
      allow read: if true;
    }


    match /events/{parent}/Artists/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/Artists/{document} {
      allow read: if true;
    }


    match /establishments/{parent}/Images/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/Images/{document} {
      allow read: if true;
    }


    match /events/{parent}/Media/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/Media/{document} {
      allow read: if true;
    }


    match /events/{parent}/PromotionEvent/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/PromotionEvent/{document} {
      allow read: if true;
    }


    match /events/{parent}/scheduleEvent/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/scheduleEvent/{document} {
      allow read: if true;
    }

  }
}
